<%- include('../includes/head.ejs') %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/check.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/modal.css">
    <link rel="stylesheet" href="/css/forms.css">
    
    
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main> 
        <div class="row g-1">
            <div class="col-12 col-md-6 col-lg-4 mb-2">
                <div class="status">
                    <h3>
                        Body Temperature Registration
                    </h3>
                </div>
                <form class="product-form" action="/covid/tempInfor" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    <div class="form-control">
                        <label for="registerTime">Date</label>
                        <input type="datetime-local" id="registerTime" name="registerTime">
                    </div>  
                    <div class="form-control">
                        <label for="temp">Temp:</label>
                        <input type="text" name="temp" id="temp"/>
                    </div>
                    <div class="btn-gr">
                        <button type="submit" class="btn btn-info">Register</button>
                        <button type="button" class="btn btn-info"><a style="text-decoration:none ; color : black;" href="/covid/tempInfor">Query Registed Infors</a></button>
                    </div>

                </form> 
             </div>

             <div class="col-12 col-md-6 col-lg-4 mb-2">
                <div class="status">
                    <h3>
                        Vaccination information
                    </h3>
                </div>
                <form class="product-form" action="/covid/injection" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    <div class="form-control">
                        <label for="injectionTime">Time:</label>
                        <select class="custom-select custom-select-lg mb-3" name="injectionTime" id="injectionTime">
                            <option selected value="1">First</option>
                            <option value="2">Second</option>
                            <option value="3">Third</option>
                        </select>
                    </div> 
                    <div class="form-control">
                        <label for="vaccineType">Type:</label>
                        <select name="vaccineType" id="vaccineType">
                            <option value="moderna">Moderna</option>
                            <option value="astraZeneca">AstraZeneca</option>
                            <option value="sinopharm">Sinopharm </option>
                        </select>
                    </div> 
                     <div class="form-control">
                        <label for="injectionDate">Injection date</label>
                        <input  type="date" name="injectionDate" id="injectionDate">
                    </div>
                    <div class="btn-gr">
                        <button type="submit" class="btn btn-info">Register</button>
                        <button type="button" class="btn btn-info"><a style="text-decoration:none ; color : black;" href="/covid/injection">Query Registed Infors</a></button>
                    </div>
                </form> 
             </div>

             <div class="col-12 col-md-6 col-lg-4 mb-2">
                <div class="status">
                    <h3>
                        Covid-19 Positive Information
                    </h3>
                </div>
                <form class="product-form" action="/covid/covid19-positive" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    <div class="form-control">
                        <label for="positiveDate">positive Date</label>
                        <input  type="date" name="positiveDate" id="positiveDate">
                    </div>
                    <div class="form-control">
                        <label for="numberOfVacination">Injections Times</label>
                        <input  type="text" name="numberOfVaccination" id="numberOfVacination">
                    </div>
                    <div class="btn-gr">
                        <button type="submit" class="btn btn-info">submit</button>
                        <button type="button" class="btn btn-info"><a style="text-decoration:none ; color : black;" href="/covid/covid19-positive"> Covid declaration Query </a></button>
                    </div>
                </form> 
             </div>
        </div>
             
    </main>
<%- include('../includes/end.ejs') %>