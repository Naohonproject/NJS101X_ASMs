<%- include('../includes/head.ejs') %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/check.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/modal.css">
    <link rel="stylesheet" href="/css/forms.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <div class="container">
            <div class="row">
                <div class="col-12 work-infor">   
                    <h2 style="text-align: center;">Table of positive covid 19</h2>
                     <% if(staff.role === "manager") { %>
                        <h5 style="text-align: center;">Staff Name :  <%= employee.name %></h5>
                    <% } %>
                    <% if(covidInfors.length > 0) { %>
                    <table class="table table-striped rollcall-table">
                        <thead>
                            <tr>
                                <th scope="col">Date</th>
                                <th scope="col">Number Of Injection</th>
                               
                            </tr>
                        </thead>
                        <tbody>
                            <% covidInfors.forEach(covidInfor => { %>
                            <tr>
                                <td scope="col"><%= covidInfor.positiveDate.toLocaleDateString() %></td>
                                <td scope="col"><%= covidInfor.injectionTimes %></td>
                            </tr>
                            <% }); %> 
                        </tbody>
                    </table>
                    <% if(staff.role === "manager") { %>
                            <div style="text-align: center;">
                                <a class="btn btn-primary" href="/covid/covid-positive-query/<%= employee._id %>" role="button">DownLoad PDF</a>
                            </div>
                    <% } %>
                     <% } else { %> 
                        <h1 style="text-align: center;margin-top : 7rem;color: red;">This staff have not registered any covid positive information</h1>       
                    <% } %>
                    
                    
                </div>
            </div>
        </div>
    </main>
<%- include('../includes/end.ejs') %>