<div class="backdrop"></div>
<header class="main-header">
  <button id="side-menu-toggle">Menu</button>
  <nav class="main-header__nav">
    <ul class="main-header__item-list">
      <li class="main-header__item">
        <a class="<%= path === '/' ? 'active' : '' %>" href="/">Home</a>
      </li>
      <% if(isAuthenticated) { %>
        <% if(staff.role === "staff") { %>
          <li class="main-header__item">
            <a class="<%= path === '/rollcall' ? 'active' : '' %>" href="/rollcall"
              >RollCall</a
            >
          </li>
          <li class="main-header__item">
            <a class="<%= path === '/profile' ? 'active' : '' %>" href="/profile"
              >Profile</a
            >
          </li>
          <li class="main-header__item">
            <a
              class="<%= path === '/workinfor' ? 'active' : '' %>"
              href="/workinfor"
              >Working Time</a
            >
          </li>
        <% } %>
        <li class="main-header__item">
          <a class="<%= path === '/covid' ? 'active' : '' %>" href="/covid"
            >Covid19</a
          >
        </li>
        <% if(staff.role === "manager") { %>
          <li class="main-header__item">
          <a class="<%= path === '/manage' ? 'active' : '' %>" href="/manage"
            >Manage</a
          >
        </li>
         <% } %>
       <% } %>
    </ul>

    <ul class="main-header__item-list">
      <% if(!isAuthenticated) { %>
      <li class="main-header__item">
        <a class="<%= path === '/login' ? 'active' : '' %>" href="/login"
          >Login</a
        >
      </li>
      <% } else { %>
     <li class="main-header__item">
        <form action="/logout" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <button type="submit">Log out</button>
        </form>
      </li>
      <% } %>
    </ul>
  </nav>
</header>

