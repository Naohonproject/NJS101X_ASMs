<%- include('./includes/head.ejs') %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/check.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/modal.css">
    <link rel="stylesheet" href="/css/forms.css">
    
    
</head>

<body>
    <%- include('./includes/navigation.ejs') %>

    <main>
        <div class="status">
            <h3>
                Staff Information
            </h3>
        </div>
        <div class="staff-infor">
            <img class="staff-infor__iamge" src="<%= imgUrl %>" alt="avatar">
        </div>
        <form class="form-profile" action="/update-profile" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="form-control">
                <label for="id">Id :</label>
                <input readonly type="text" id="id" value="<%= id %>">
            </div>  
            <div class="form-control">
                <label for="name">Name :</label>
                <input readonly type="text" id="name"  value="<%= name %>">
            </div>
             <div class="form-control">
                <label for="doB">doB : </label>
                <input readonly type="text" id="doB"  value="<%= doB %>">
            </div> 
            <div class="form-control">
                <label for="salaryScale">Salary Scale : </label>
                <input readonly type="text" id="salaryScale"  value="<%= salaryScale %>">
            </div>

            <div class="form-control">
                <label for="startDate">startDate : </label>
                <input readonly type="text" id="startDate"  value="<%= startDate %>">
            </div>
            
             <div class="form-control">
                <label for="dept">Department :</label>
                <input readonly type="text" id="dept"  value="<%= department %>">
            </div>

            <div class="form-control">
                <label for="dept">annual Leave :</label>
                <input readonly type="text" id="annualLeave"  value="<%= annualLeave %>">
            </div>
             <div class="form-control">
                 <label for="image">Image</label>
                <input 
                    type="file" 
                    name="image" 
                    id="image"  
                >
            </div>
            </div>  
            <button type="submit" class="btn btn-info">Update</button>
        </form>
    </main>
<%- include('./includes/end.ejs') %>